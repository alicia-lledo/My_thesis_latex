  pages={2189-98},
  author={Lin, {You-Chin} C and Kuo, {Ming-Wei} W and Yu, John and Kuo, {Huan-Hsien} H and Lin, {Ruey-Jen} J and Lo, {Wan-Lin} L and Yu, Alice L},
