  journal={{PLoS} {ONE}},
  pages={e2301},
  author={Zeeuwen, Patrick L and de Jongh, Gys J and {Rodijk-Olthuis,} Diana and Kamsteeg, Marijke and Verhoosel, Renate M and van Rossum, Michelle M and Hiemstra, Pieter S and Schalkwijk, Joost},
  number={6},
